<%= form_with(model: coin, local: true) do |form| %>
<% if coin.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

  <ul>
    <% coin.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<form>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :url_image %>
    <%= form.text_field :url_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :mining_type_id %>
    <%# Código abaixo fere os princípios do MVC pois uma view nao deve acessar um model %>
    <%#form.select("mining_type_id", MiningType.all.collect{|m| [m.description, m.id]}, {include_blank: "Selecione"})%>
    <%# form.select('mining_type_id', MiningType.all.pluck(:description, :id), {include_blank: 'Selecione...'}) %>
    <%# O correto é o controller mandar dados para a view %>
    <%= form.select("mining_type_id", @mining_type_options, {include_blank: "Selecione..."}, class: "form-control")%>
  </div>

  <div class="actions">
    <%= form.submit nil, class: 'btn btn-primary'%>
  </div>
</form>
<% end %>